<%= form_with model: @pet do |form | %>


    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name  %>
    </div>
    
    <div class="field">
        <%= form.label :category %>
        <%= form.text_field :category  %>
    </div>

    <div class="field">
        <%= form.label :breed %>
        <%= form.text_field :breed  %>
    </div>

    <div class="field">
        <%= form.label :color %>
        <%= form.text_field :color  %>
    </div>

    <div class="field">
        <%= form.label :characteristic %>
        <%= form.text_field :characteristic  %>
    </div>


    <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
    </div>


    <div class="actions">
    <%= form.submit %>
    </div>
<%end%>