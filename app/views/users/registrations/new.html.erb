
<div class="login-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="text-center">Sign Up</h2>   
   <div class="form-group">
    
    <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "Name", class:"form-control" %>
  </div>

   <div class="form-group">
    
    <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname",placeholder: "Lastname",class:"form-control" %>
  </div>

   <div class="form-group">
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone",placeholder: "Phone",class:"form-control" %>
  
  </div>

   <div class="form-group">
    
    <%= f.label :date_of_birth %><br />
    <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "date of birth",class:"form-control" %>
  
  </div>

   <div class="form-group">
  
 
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "E-mail",class:"form-control" %>
  </div>

   <div class="form-group">
    <%= f.password_field :password, autocomplete: "Password - Min 6 Characters",placeholder: "Password 6 characters minimum",class:"form-control"%>
  </div>

   <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "Password Confirmation",class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class:"btn btn-primary btn-block" %>

  </div>
<% end %>

</div>